<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNav">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_icon_selector</item>
    </style>

    <style name="MainText">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
